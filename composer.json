  "name": "kokororin/fmt",
  "type": "application",
  "description":
    "A script to automatically fix K&R and PSR-1/2 Coding Standard.",
  "license": "BSD-3-Clause",
  "keywords": [
    "language syntax",
    "formatter",
    "formatting",
    "psr1",
    "psr2",
    "coding",
    "style"
  ],
  "homepage": "https://github.com/kokororin/fmt",
  "bin": ["bin/fmt.phar", "bin/refactor.phar"],
  "authors": [
    {
      "name": "Carlos C",
      "email": "carlos@cirello.eu"
    },
    {
      "name": "kokororin",
      "email": "i@kotori.love"
    }
  ],
  "support": {
    "issues": "https://github.com/kokororin/fmt/issues",
    "source": "https://github.com/kokororin/fmt/fmt"
  },
  "scripts": {
